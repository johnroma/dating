#!/bin/sh
# Run comprehensive checks before commit

echo "ğŸ” Running pre-commit checks..."

# 1. Check code formatting
echo "ğŸ“ Checking code formatting..."
pnpm format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Run 'pnpm format' to fix them."
  exit 1
fi

# 2. Run linting
echo "ğŸ”§ Running ESLint..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting issues found. Run 'pnpm lint:fix' to fix them."
  exit 1
fi

# 3. Run type checking
echo "ğŸ“‹ Running TypeScript type checking..."
pnpm typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Fix them before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
